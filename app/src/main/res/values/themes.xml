<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CitaPrevia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="GoogleLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/com_facebook_button_background_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="EmailLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/email_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:drawableLeft">@android:drawable/ic_dialog_email</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EmailRegisterButton">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditButton">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RemoveButton">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RegularButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>